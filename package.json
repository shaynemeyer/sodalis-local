{
  "name": "sodalis-local",
  "displayName": "Sodalis",
  "description": "Ollama based coding assistant for VSCode",
  "version": "0.0.3",
  "engines": {
    "vscode": "^1.101.0"
  },
  "publisher": "shaynemeyer",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/shaynemeyer/sodalis-local.git"
  },
  "categories": [
    "AI",
    "Snippets",
    "Programming Languages",
    "Machine Learning"
  ],
  "keywords": [
    "ai",
    "copilot",
    "code completion",
    "ollama",
    "llm",
    "local ai",
    "code assistant",
    "autocomplete",
    "pair programming"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./dist/extension.js",
  "icon": "media/sodalis-icon.png",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "sodalis-chat",
          "title": "Sodalis Chat",
          "icon": "$(feedback)"
        }
      ]
    },
    "views": {
      "sodalis-chat": [
        {
          "id": "sodalisChatView",
          "name": "Chat",
          "type": "webview",
          "icon": "$(feedback)"
        }
      ]
    },
    "configuration": {
      "title": "Sodalis",
      "properties": {
        "ollama.defaultModel": {
          "type": "string",
          "description": "Default model to use with Sodalis"
        },
        "ollama.apiHost": {
          "type": "string",
          "default": "http://localhost:11434",
          "description": "Ollama  API host URL"
        }
      }
    },
    "commands": [
      {
        "command": "sodalis.searchAvailableModels",
        "title": "Search Available Models"
      },
      {
        "command": "sodalis.selectDefaultModel",
        "title": "Select Default Model"
      },
      {
        "command": "sodalis.searchAvailableModels",
        "title": "Search Available Models"
      },
      {
        "command": "sodalis.clearCompletionCache",
        "title": "Clear Completion Cache"
      },
      {
        "command": "sodalis.updateOllamaHost",
        "title": "Update Ollama Host"
      },
      {
        "command": "sodalis.openChatPanel",
        "title": "Open Sodalis Chat Panel",
        "icon": "$(feedback)"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "check-types": "tsc --noEmit",
    "compile": "npm run check-types && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test",
    "package": "npm run check-types && node esbuild.js --production"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@types/vscode": "^1.101.0",
    "@typescript-eslint/eslint-plugin": "^8.31.1",
    "@typescript-eslint/parser": "^8.31.1",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.5.2",
    "esbuild": "^0.25.5",
    "eslint": "^9.25.1",
    "typescript": "^5.8.3"
  },
  "dependencies": {
    "ollama": "^0.5.16"
  }
}
